doctype html
html
  head
    meta(charset='utf-8')
    title #{title}
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Roboto:400,700,900,400italic')
    link(rel='stylesheet', type='text/css', href='/css/style.css')
    script(type='text/javascript', src='https://cdn.firebase.com/v0/firebase.js')
    script(type='text/javascript', src='https://cdn.firebase.com/v0/firebase-simple-login.js')
    script(type='text/javascript', src='/js/jquery-1.10.2.js')
    script(type='text/javascript', src='/js/scripts_overall.js')
    block scripts

  body
    header
      .siteName: a(href='/') WUBEx
      .hiddenHeaderMenu
        .displayLink
        .logInArea
          form#logIn
            input#username(type='email', placeholder='Email')
            input#password(type='password', placeholder='Password')
            input#logIn(type='submit', value='Log In')
            input#signUp(type='submit', value='Sign Up')
            input#logOut(type='submit', value='Log Out')
      .search
        input#searchBooks(type='search', placeholder='Search Books')
        input#searchClasses(type='search', placeholder='Search Classes')
        
    .container
      .mainContent
        block content
      .sidebar
        block sidebar

    footer
      p Maintained by Bryan Jensen '15
